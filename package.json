{
  "name": "opencode-quota-sidebar",
  "version": "0.1.0",
  "description": "OpenCode plugin that shows quota and token usage in session titles",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist/*.js",
    "dist/*.d.ts",
    "dist/providers/*.js",
    "dist/providers/*.d.ts",
    "LICENSE",
    "CHANGELOG.md",
    "CONTRIBUTING.md",
    "SECURITY.md",
    "README.md",
    "quota-sidebar.config.example.json"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "prepack": "npm run build",
    "prepublishOnly": "npm run typecheck && npm run build && npm test",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "node --test dist/__tests__/*.test.js"
  },
  "keywords": [
    "opencode",
    "plugin",
    "quota",
    "sidebar",
    "token-usage"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nicepkg/opencode-quota-sidebar.git"
  },
  "homepage": "https://github.com/nicepkg/opencode-quota-sidebar#readme",
  "bugs": {
    "url": "https://github.com/nicepkg/opencode-quota-sidebar/issues"
  },
  "author": "opencode-quota-sidebar contributors",
  "engines": {
    "node": ">=18"
  },
  "peerDependencies": {
    "@opencode-ai/plugin": "^1.2.10",
    "@opencode-ai/sdk": "^1.2.10"
  },
  "devDependencies": {
    "@opencode-ai/plugin": "^1.2.10",
    "@opencode-ai/sdk": "^1.2.10",
    "@types/node": "^22.13.10",
    "typescript": "^5.8.2"
  }
}
